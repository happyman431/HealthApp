<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="http://prismlibrary.com"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="HealthApp.Views.AppointmentPage" BackgroundImageSource="Hospital">

    <StackLayout>
        <!-- Place new controls here -->
        <Label Text="Appointment App"
              FontSize="15"
              FontAttributes="Bold"
              HorizontalOptions="Center" />
        <Label Text="Name"/>
        <Editor Placeholder="Enter Name" Text="{Binding Name}"/>

        <Label Text="Gender"/>
        <Editor Placeholder="Enter Gender" Text="{Binding Gender}"/>

        <Label Text="Appointment Details"/>
        <Editor Placeholder="Enter Appointment Details" Text="{Binding Appointment Details }"/>

        




        
        <Label Text="Date of Appointment"/>
        <DatePicker Format="D" VerticalOptions="CenterAndExpand" Margin="10, 0" Date="{Binding DateOfAppointment}" />


    </StackLayout>

</ContentPage>